@using DungeonRpg.Services
@inject RaceService RaceService  
<h1>Register</h1>

<p>Register a new account, and create a character!</p>
<form action="api/User/register" method="post">
    <table class="table-borderless">
        <tr>
            <td>Race</td>
            <td>
                @foreach (var race in RaceService.All())
                {
                    if (race.Name == "Human")
                    {
                        <input type="radio" name="RaceId" value="@race.Id" checked/>@race.Name <br />
                    }
                    else
                    {
                        <input type="radio" name="RaceId" value="@race.Id" />@race.Name <br />
                    }
                }
            </td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                <input type="radio" name="gender" value="male" checked/> Male <br />
                <input type="radio" name="gender" value="female"/> Female
            </td>
        </tr>
        <tr>
            <td>Attributes</td>
            <td><i>Spend your initial attributes...</i></td>
        </tr>
        <tr>
            <td>Username</td>
            <td><input type="text" name="username"/></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Register"/></td>
        </tr>
    </table>
</form>
